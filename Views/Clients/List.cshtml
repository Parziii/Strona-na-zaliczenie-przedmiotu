@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    int i = 1;
}
@model IEnumerable<Strona.Entities.ClientEntity>
<section id="about" class="about section-bg">
    <div class="container table-responsive" data-aos="fade-up">


        <div class="content col-xl-8 d-flex align-items-stretch">
            <div class="content">
                <div class="row">
                    <form method="GET" class="form-inline col-md-4">
                        <input type="text" name="name" class="form-control col-md-4 w-100" placeholder="Wyszukaj mail, temat..." />
                        <button type="submit" class="btn btn-primary ml-2">Szukaj!</button>
                    </form>
                </div>
                <div class="table-responsive-sm">
                    <table class="table table-striped table-sm table-dark ">
                        <caption class="text-white">Spis wszystkich zgłoszeń</caption>
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nazwa</th>
                                <th scope="col">Mail </th>
                                <th scope="col">Temat</th>
                                <th scope="col">Opis</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>@item.Name </td>
                                    <td>@item.Mail </td>
                                    <td>@item.Topic </td>
                                    <td>@item.Description</td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Home" asp-action="Index" class="about-btn"><span> Powrót do strony głównej</span> <i class="bx bx-chevron-right"></i></a>
                </div>
            </div>
        </div>
    </div>

</section>
