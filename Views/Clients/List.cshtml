@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model IEnumerable<Strona.Entities.ClientEntity>
<section id="about" class="about section-bg">
    <div class="container text-white" data-aos="fade-up">

        
            <div class="content col-xl-8 d-flex align-items-stretch">
                <div class="content">
                    <h1 class="text-white">Spis wszystkich zgłoszeń</h1>
                    <form method="GET" class="form-inline mb-2">
                        <input type="text" name="name" class="form-control" />
                        <button type="submit" class="btn btn-primary ml-2">Wyszukaj klienta</button>
                    </form>

                    <table class="table text-white">
                        <thead>
                            <tr>
                                <th>Nazwa</th>
                                <th>Mail </th>
                                <th>Temat</th>
                                <th>Opis</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name </td>
                                    <td>@item.Mail </td>
                                    <td>@item.Topic </td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a asp-controller="Home" asp-action="Index" class="about-btn"><span> Powrót do strony głównej</span> <i class="bx bx-chevron-right"></i></a>
                </div>
            </div>


       
    </div>
</section>