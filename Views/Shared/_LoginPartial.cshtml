@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
    
        @if (SignInManager.IsSignedIn(User))
        {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">@User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="btn btn-primary btn-sm">Wyloguj</button>
            </form>
        </li>
        }
        else
        {
        <li class="nav-item">
            <a class="btn btn-primary btn-sm" asp-area="Identity"  asp-page="/Account/Login">Logowanie</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
        </li>
        }
